{
    "name": "ethan-yelei/simple_skeleton",
    "type": "project",
    "keywords": [
        "php",
        "framework",
        "middleware"
    ],
    "description": "framework",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "YeLei",
            "email": "61647649@qq.com"
        }
    ],
    "repositories": {
        "aliyun": {
            "type": "composer",
            "url": "https://mirrors.aliyun.com/composer/"
        },
        "composer": {
            "type": "composer",
            "url": "https://repo.packagist.org"
        }
    },
    "require": {
        "php": ">=7.2",
        "ext-swoole": ">=4.5",
        "hyperf/cache": "~2.0.0",
        "hyperf/command": "~2.0.0",
        "hyperf/config": "~2.0.0",
        "hyperf/db-connection": "~2.0.0",
        "hyperf/framework": "~2.0.0",
        "hyperf/guzzle": "~2.0.0",
        "hyperf/http-server": "~2.0.0",
        "hyperf/logger": "~2.0.0",
        "hyperf/memory": "~2.0.0",
        "hyperf/process": "~2.0.0",
        "hyperf/redis": "~2.0.0",
        "hyperf/json-rpc": "~2.0.0",
        "hyperf/rpc": "~2.0.0",
        "hyperf/rpc-client": "~2.0.0",
        "hyperf/rpc-server": "~2.0.0",
        "hyperf/constants": "~2.0.0",
        "hyperf/async-queue": "~2.0.0",
        "hyperf/amqp": "~2.0.0",
        "hyperf/elasticsearch": "~2.0.0"
    },
    "require-dev": {
        "hyperf/testing": "~2.0.0"
    },
    "suggest": {
        "ext-openssl": "Required to use HTTPS.",
        "ext-json": "Required to use JSON.",
        "ext-pdo": "Required to use MySQL Client.",
        "ext-pdo_mysql": "Required to use MySQL Client.",
        "ext-redis": "Required to use Redis Client."
    },
    "autoload": {
        "psr-4": {
            "Installer\\": "installer/",
            "App\\": "app/"
        },
        "files": [

        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "./test/"
        }
    },
    "prefer-stable": true,
    "config": {
        "secure-http": false
    },
    "scripts": {
        "pre-install-cmd": "Installer\\Script::install",
        "pre-update-cmd": "Installer\\Script::install",
        "post-install-cmd": "Installer\\Script::afterInstall",
        "post-update-cmd": "Installer\\Script::afterInstall",
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "test": "co-phpunit -c phpunit.xml --colors=always"
    }
}
